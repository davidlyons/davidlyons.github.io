---
// https://www.astroicon.dev/
import { Icon } from 'astro-icon/components';

const { label, icon, rel = 'noreferrer', ...props } = Astro.props;
---

<a
  target="_blank"
  rel={rel}
  class="inline-block px-3 text-neutral-500 transition-colors hover:text-neutral-800 sm:px-1.5 md:px-2.5
    dark:text-neutral-300/30 dark:hover:text-neutral-300/80"
  aria-label={label}
  {...props}
>
  <Icon name={`social/${icon}`} size={18} />
</a>
