---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

type experienceType = {
  company: string;
  contract?: boolean;
  url: string;
  title: string;
  start: string;
  end: string;
  location: string;
};

const experience: experienceType[] = [
  {
    company: 'BP',
    url: 'https://www.bp.com/',
    title: 'Senior Design Engineer',
    start: 'May 2020',
    end: 'Present',
    location: 'Los Angeles, CA',
  },
  {
    company: 'Object Edge',
    contract: true,
    url: 'https://www.objectedge.com/',
    title: 'Front End Web + 3D Web Developer',
    start: 'Feb 2019',
    end: 'Jan 2020',
    location: 'Los Angeles, CA',
  },
  {
    company: 'WITHIN',
    url: 'https://www.with.in/',
    title: 'WebVR Software Engineer',
    start: 'Nov 2015',
    end: 'Aug 2018',
    location: 'Los Angeles, CA',
  },
  {
    company: 'Slingshot',
    url: 'http://www.slingshot.com/',
    title: 'Front End Web Developer',
    start: 'Mar 2013',
    end: 'Nov 2015',
    location: 'Dallas, TX',
  },
  {
    company: 'TRG / Click Here Labs',
    url: 'https://clickherelabs.com/',
    title: 'Front End Web Developer',
    start: 'Mar 2012',
    end: 'Mar 2013',
    location: 'Dallas, TX',
  },
];
---

<BaseLayout title="Resume">
  <div class="mb-11 flex items-center">
    <h1 class="mb-0 text-3xl font-light dark:text-white">Resume</h1>
    <div class="ms-6">
      <a
        class="inline-block rounded border border-current px-2 py-1 text-center text-[13px] text-indigo-700
          transition-colors hover:border-indigo-700 hover:bg-indigo-700 hover:text-white dark:text-neutral-500
          dark:hover:border-neutral-500 dark:hover:bg-neutral-500 dark:hover:text-white"
        href="/David-Lyons-Resume.pdf"
        title="Download David-Lyons-Resume.pdf"
        download
      >
        <Icon name="download" class="me-1 align-middle" />
        Download PDF
      </a>
    </div>
  </div>

  <div class="resume">
    <div class="mb-5 grid lg:grid-cols-12">
      <div class="mb-lg-0 mb-5 lg:col-span-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <h3 class="mb-3">Languages</h3>
            <ul class="list-none">
              <li><Icon name="devicon:javascript" />JavaScript, ES6+</li>
              <li><Icon name="devicon:html5" />HTML</li>
              <li><Icon name="devicon:css3" />CSS</li>
              <li><Icon name="skill-icons:sass" />SCSS</li>
              <li><Icon name="skill-icons:typescript" />TypeScript</li>
              <li><Icon name="file-icons:terminal" />Command Line</li>
            </ul>

            <h3 class="mb-3">Skills</h3>
            <ul class="list-none">
              <li>Responsive Web Design</li>
              <li>Photo Editing</li>
              <li>Video Editing</li>
              <li>Graphic Design</li>
              <li>Interaction Design</li>
              <li>Vector Math</li>
              <li>3D Modeling</li>
              <li>Digital Sculpting</li>
              <li>Retopology</li>
              <li>UV Layout</li>
              <li>3D Printing</li>
            </ul>

            <h3 class="mb-3">Currently Learning</h3>
            <ul class="list-none">
              <li><Icon name="devicon:react" /><Icon name="tags/threejs" />React Three Fiber</li>
              <li><Icon name="file-icons:webgl" size={24} />GLSL Shaders</li>
              <li><Icon name="tags/blender" />Blender</li>
            </ul>
          </div>
          <div>
            <h3 class="mb-3">Tools</h3>
            <ul class="list-none">
              <li><Icon name="tags/threejs" />Three.js</li>
              <li><Icon name="skill-icons:bootstrap" />Bootstrap</li>
              <li><Icon name="devicon:tailwindcss" />Tailwind</li>
              <li><Icon name="devicon:react" />React</li>
              <li><Icon name="devicon:vscode" />Visual Studio Code</li>
              <li><Icon name="devicon:chrome" />Chrome DevTools</li>
              <li><Icon name="tags/npm" />npm</li>
              <li><Icon name="devicon:git" />Git</li>
              <li><Icon name="devicon:nextjs" />Next.js</li>
              <li>
                <Icon name="tags/astro" class="hidden dark:inline" /><Icon
                  name="devicon:astro"
                  class="dark:hidden"
                />Astro
              </li>
              <li><Icon name="skill-icons:gatsby" />Gatsby</li>
              <li><Icon name="tags/storybook" />Storybook</li>
              <li><Icon name="skill-icons:webpack-dark" />Webpack</li>
              <li><Icon name="devicon:vitejs" />Vite</li>
              <li><Icon name="skill-icons:photoshop" />Photoshop</li>
              <li><Icon name="skill-icons:illustrator" />Illustrator</li>
              <li><Icon name="skill-icons:premiere" />Premiere</li>
              <li><Icon name="devicon:maya" />Maya</li>
              <li><Icon name="file-icons:zbrush" />ZBrush</li>
              <li><Icon name="tags/resolume" />Resolume</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="lg:col-span-7 lg:col-start-6">
        <h3 class="mb-4">Work Experience</h3>

        <div class="mb-12 space-y-4">
          {
            experience.map(({ company, url, contract, title, start, end, location }) => (
              <div>
                <div class="font-medium">
                  <a href={url} target="_blank" rel="noreferrer">
                    {company}
                  </a>
                  {contract && <span class="opacity-50">• Contract</span>}
                </div>
                <div>{title}</div>
                <div class="text-sm font-light opacity-50">{`${start} - ${end} • ${location}`}</div>
              </div>
            ))
          }
        </div>

        <h3 class="mb-4">Education</h3>

        <div class="mb-4">
          <div class="font-medium">Texas A&M University</div>
          <div>
            Bachelor of Science in <a
              href="https://pvfa.tamu.edu/academics/disciplines/visualization/"
              target="_blank"
              rel="noreferrer"
            >
              Visualization
            </a>, Dec 2010
          </div>
          <div class="text-sm font-light opacity-50">
            Fall 2007 - Fall 2010 • College Station, TX
          </div>
        </div>

        <div>
          <div class="font-medium">The University of Texas at Dallas</div>
          <div class="text-sm font-light opacity-50">
            Spring 2010 semester away in the Arts and Technology department
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style lang="scss">
  h3 {
    text-transform: uppercase;
    letter-spacing: 1.6px;
  }

  .list-none {
    margin-bottom: 35px;

    li {
      display: flex;
      align-items: center;

      svg {
        margin-right: 8px;
        flex-shrink: 0;
      }
    }
  }
</style>
